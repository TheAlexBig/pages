---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

import '../styles/global.css';

const highlights = [
  {
    title: 'DevOps @ Euronet',
    items: [
      'Puppet/Hiera/r10k automation (Git-backed deployments, dynamic GitHub App token injection)',
      'Azure DevOps → GitHub migrations with GitHub Actions + runner hardening (Squid-aware)',
      'Zabbix Agent 2 automation (SQL Server ODBC checks, discovery rules, foreach calculated items)',
    ],
  },
  {
    title: 'Automation Tooling',
    items: [
      'PowerShell + Bash for ActiveBatch audits, Windows service orchestration, log analysis',
      'Tag-based rollback workflows and secure Git operations (sparse clones, PAT auth)',
      'SSL workflows with F5 BIG-IP and validation processes',
    ],
  },
];

const focusAreas = [
  { k: 'IaC & Config Mgmt', v: 'Puppet · Hiera · r10k · Terraform' },
  { k: 'CI/CD & GitOps', v: 'GitHub Actions · GitHub Apps · Secure runners' },
  { k: 'Monitoring', v: 'Zabbix Agent 2 · SQL ODBC checks · foreach KPIs' },
  { k: 'Security', v: 'AWS KMS · Encryption SDK v3 · TLS/SSL workflows' },
];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />

    <main class="container">
      <section class="hero">
        <span class="badge">Available for senior DevOps / Platform roles</span>

        <h1>
          I build reliable delivery pipelines, secure automation, and monitoring that ops teams can actually live with.
        </h1>

        <p>
          I’m José Valladares — a DevOps Engineer with a strong backend/architecture background.
          I automate infrastructure, CI/CD, and observability across enterprise environments (Windows + Linux),
          with a focus on security, repeatability, and clean operational workflows.
        </p>

        <div class="cta">
          <a class="button primary" href="/blog">Read the blog</a>
          <a class="button" href="https://www.linkedin.com/in/josevalladares22526a154/" target="_blank" rel="noreferrer">
            LinkedIn
          </a>
          <!-- Replace with your GitHub -->
          <a class="button" href="https://github.com/" target="_blank" rel="noreferrer">
            GitHub
          </a>
        </div>
      </section>

      <section class="grid" aria-label="Highlights">
        <div class="card">
          <h2>What I’m doing lately</h2>
          {highlights.map((h) => (
            <div style="margin-top: 12px;">
              <div class="badge" style="margin-bottom: 10px;">{h.title}</div>
              <ul class="list">
                {h.items.map((it) => <li>{it}</li>)}
              </ul>
            </div>
          ))}
        </div>

        <div class="card">
          <h2>Core focus</h2>
          <div class="kpis" style="margin-top: 10px;">
            {focusAreas.map((x) => (
              <div class="kpi">
                <strong>{x.k}</strong>
                <span>{x.v}</span>
              </div>
            ))}
          </div>

          <div style="margin-top: 14px;" class="small">
            <div class="badge">Keywords</div>
            <p class="small" style="margin: 10px 0 0;">
              Puppet · Terraform · GitHub Actions · Zabbix · Windows Services · Proxies · F5 · AWS KMS · Encryption SDK
            </p>
          </div>
        </div>
      </section>

      <section class="card" style="margin-top: 18px;">
        <h2>Quick bio</h2>
        <p class="small" style="margin: 0;">
          DevOps Engineer at Euronet (Kansas, US). Previously Web Architect / Tech Lead (Applaudo).
          Also worked as a Senior Java Consultant (Spring Boot, AWS/GCP, Terraform, Salesforce integrations).
        </p>
      </section>
    </main>

    <Footer />
  </body>
</html>
